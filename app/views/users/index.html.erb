<h1>Users</h1>
<h2>Total users: <%= params[:filter] ? @users[0].total_count : @users.count %></h2>
<div class="users-grid" style="display: grid; grid-template-columns: repeat(3, 1fr); gap: 20px;">
  <% @users.each do |user| %>
    <div class="card shadow-sm rounded-lg" style="background-color: #f0f0f0;border: 1px solid #ccc;padding: 10px;">
      <div class="flex items-center justify-between">
        <div>
          <h3 class="text-lg font-semibold"><%= user.name %></h3>
          <div class="text-gray-600 text-sm">
            Last login: <%= user.last_sign_in_at.strftime("%Y-%m-%d") %>
          </div>
        </div>
        <div class="bg-blue-100 text-blue-800 px-3 py-1 rounded-full">
          <%= pluralize(user.sign_in_count, 'login') %>
        </div>
      </div>
    </div>
  <% end %>
</div>
<div class="pagination">
  <%= will_paginate @users,
    previous_label: '← Previous',
    next_label: 'Next →',
    inner_window: 2,
    outer_window: 1
  %>
</div>
