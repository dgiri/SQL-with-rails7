
<h1>Posts with tags: <%= params[:tags] %></h1>
<div class="posts-grid">
  <% @posts.each do |post| %>
    <%= render partial: "home/post_card", locals: { post: post } %>
  <% end %>
</div>

<div class="pagination">
  <%= will_paginate @posts,
    previous_label: '← Previous',
    next_label: 'Next →',
    inner_window: 2,
    outer_window: 1
  %>
</div>
