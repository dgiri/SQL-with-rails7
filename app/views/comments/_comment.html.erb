<div id="<%= dom_id comment %>">
  <p>
    <strong>User:</strong>
    <%= comment.user_id %>
  </p>

  <p>
    <strong>Post:</strong>
    <%= comment.post_id %>
  </p>

  <p>
    <strong>Content:</strong>
    <%= comment.content %>
  </p>

  <p>
    <strong>Approved:</strong>
    <%= comment.approved %>
  </p>

  <p>
    <strong>Upvotes:</strong>
    <%= comment.upvotes %>
  </p>

  <p>
    <strong>Downvotes:</strong>
    <%= comment.downvotes %>
  </p>

  <p>
    <strong>Parent:</strong>
    <%= comment.parent_id %>
  </p>

</div>
